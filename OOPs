#include <iostream>
using namespace std;
class CalSeconds{
    
    public:
    int hour,min,sec;
    
    void Cal(); 
    
    CalSeconds(int h,int m,int s){
        hour=h;
        min=m;
        sec=s;
    }
};
void CalSeconds :: Cal(){
    int tol_sec=0;
    tol_sec= (hour*3600) + (min*60) + sec;
    cout<<"Time in total seconds : "<<tol_sec;
}

int main(){
    
    int getH,getM,getS;
    char ch;
    cout<<"Enter the time (HH:MM:SS) : ";
    cin >> getH >> ch >> getM >> ch >> getS;
    CalSeconds c(getH,getM,getS);
    c.Cal();
    return 0;
}
